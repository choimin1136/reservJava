<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context=".reservation.Reservation"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_date_picker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#D1D0D0"
                    android:text="날짜 선택"
                    android:textColor="@color/teal_200"
                    android:textSize="18dp"
                    app:backgroundTint="#FFFFFF"
                    app:iconTint="#FFFFFF" />
                <TextView
                    android:id="@+id/time_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="시간 선택"
                    android:textColor="#03A9F4"
                    android:textSize="18sp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/time_list"/>
                <TextView
                    android:id="@+id/product_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="상품 선택"
                    android:textColor="#03A9F4"
                    android:textSize="18sp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/product_list"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:paddingLeft="10dp"
                        android:text="인원 선택"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageButton
                            android:id="@+id/person_Plus"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:src="@drawable/arrow_up"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/person"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:shadowColor="#B3AFAF"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <ImageButton
                            android:id="@+id/person_Minus"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:src="@drawable/arrow_down" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maplefont"
                    android:gravity="center"
                    android:text="날짜 : "
                    android:textColor="#03A9F4"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="시간 : "
                    android:textColor="#03A9F4"
                    android:textSize="24sp"
                    android:fontFamily="@font/maplefont"/>


                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="상품 : "
                    android:textColor="#03A9F4"
                    android:textSize="24sp"
                    android:fontFamily="@font/maplefont"/>

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="인원 : "
                    android:textColor="#03A9F4"
                    android:textSize="24sp"
                    android:fontFamily="@font/maplefont"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/calendar_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="날짜를 선택하세요"
                    android:fontFamily="@font/maplefont"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/time_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="시간을 선택하세요"
                    android:textColor="#000000"
                    android:fontFamily="@font/maplefont"
                    android:textSize="24sp" />


                <TextView
                    android:id="@+id/product_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="상품명을 입력해주세요"
                    android:textColor="#000000"
                    android:fontFamily="@font/maplefont"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/person_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textColor="#000000"
                    android:fontFamily="@font/maplefont"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>
        <EditText
            android:id="@+id/edt_etc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="요청 사항을 입력해주세요."
            android:textColor="#03A9F4"
            android:textSize="24sp"
            android:fontFamily="@font/maplefont"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:gravity="center">

            <Button
                android:id="@+id/rev_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maplefont"
                android:text="예약"
                android:textSize="18sp"
                app:backgroundTint="#A7D8FF"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/rev_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maplefont"
                android:text="취소"
                android:textSize="18sp"
                app:backgroundTint="#A7D8FF"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_bs_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>