<?xml version="1.0" encoding="utf-8"?>
<!-- 전체화면(햄버거화면을 위한) 시작 -->
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="left"
    tools:context=".ui.a_login_signup.LogPwSearchActivity">

    <!-- 전체화면(햄버거화면 제외) 시작 -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!-- 전체화면(하단바 배치를 위한) 시작 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <!-- 상단(햄버거버튼,툴바,액션바 배치를 위한) 시작 -->
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat"
                >

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/backJoinBtn"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#A7F2FF"
                    app:popupTheme="@style/Widget.AppCompat.Toolbar"
                    app:titleTextColor="#000000">
                    <!-- 상단바 시작 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <!-- 뒤로가기 아이콘(아이콘 상단여백 조절을위해 검색입력창과 분리시킴) -->
                        <ImageView
                            android:id="@+id/backQnABtn1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="13dp"
                            android:src="@drawable/navigate_before" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="13dp"
                            android:layout_weight="1" />
                    </LinearLayout>
                    <!-- 상단바 끝 -->

                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>
            <!-- 상단(햄버거버튼,툴바,액션바 배치를 위한) 끝 -->

            <!-- 중단(내용화면 배치를 위한) 시작 -->
            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                >
                <!-- 내용 화면 시작 -->
                <fragment
                    class="com.example.reservjava_app.fragment.LogPwSearchFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <!-- 내용 화면 끝 -->
            </FrameLayout>
            <!-- 중단(내용화면 배치를 위한) 끝 -->

            <!-- 하단바 시작 -->
            <!-- 하단바 끝 -->

        </LinearLayout>
        <!-- 전체화면(하단바 배치를 위한) 시작 -->

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <!-- 전체화면(햄버거화면 제외) 끝 -->



</androidx.drawerlayout.widget.DrawerLayout>
    <!-- 전체화면(햄버거화면을 위한) 끝 -->
