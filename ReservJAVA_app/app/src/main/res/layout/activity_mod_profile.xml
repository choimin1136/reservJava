<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <ImageView
            android:id="@+id/backQnABtn1"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_gravity="center|left"
            android:src="@drawable/navigate_before"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내 정보 수정"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="14sp"/>

    </FrameLayout>


    <LinearLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#353535"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mod_faceImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:layout_margin="30dp"
            android:src="@mipmap/logo_foreground"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/mod_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="소중한 OOO님"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textAlignment="center"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="비밀번호"
                android:textColor="#363636"/>
            <EditText
                android:id="@+id/mod_editPW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="비밀번호 입력"
                android:textColor="#3F51B5"
                android:padding="10dp"
                android:drawablePadding="20dp"/>
        </LinearLayout>
        <!--수정할 내용-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="비밀번호 확인"
                android:textColor="#363636"/>
            <EditText
                android:id="@+id/mod_editPW2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="비밀번호 입력"
                android:textColor="#3F51B5"
                android:padding="10dp"
                android:drawablePadding="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="닉네임"
                android:textColor="#363636"/>
            <EditText
                android:id="@+id/mod_editNick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="비밀번호 입력"
                android:textColor="#3F51B5"
                android:padding="10dp"
                android:drawablePadding="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="전화번호"
                android:textColor="#363636"/>
            <EditText
                android:id="@+id/mod_editTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="전화번호 불러옴"
                android:textColor="#3F51B5"
                android:padding="10dp"
                android:drawablePadding="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="이메일"
                android:textColor="#363636"/>
            <EditText
                android:id="@+id/mod_editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="이메일 불러옴"
                android:textColor="#3F51B5"
                android:padding="10dp"
                android:drawablePadding="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">


            <Button
                android:id="@+id/mod_saveBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/check_img"
                android:fontFamily="@font/soojinfont"
                android:text="저장"
               android:textColor="#5d5d5d"
                android:textSize="12sp"
                android:onClick="mod_saveBtnClicked"
                android:background="@drawable/border2"
                android:layout_weight="1"
                android:layout_margin="20dp"
                app:backgroundTint="#FFFFFF" />

            <Button
                android:id="@+id/mod_cancelBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/cancel_img"
                android:fontFamily="@font/soojinfont"
                android:text="취소"
                android:onClick="mod_cancelBtnClicked"
                android:textColor="#5d5d5d"
                android:textSize="12sp"
                android:background="@drawable/border2"
                android:layout_weight="1"
                android:layout_margin="20dp"
                app:backgroundTint="#FFFFFF" />
        </LinearLayout>





        <TextView
            android:id="@+id/mod_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=""
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mod_tv_name" />

    </LinearLayout>


</LinearLayout>